#!/bin/bash

COMMAND=$(echo -e "Browser\nMedia Browser\nGimp\nObsidian\nFinder\nCava\nActivity Monitor\nGPU Monitor\nGodot\nCode\nMusic\nVideo\nPass\nSettings\nSystem" | $DMENU -p "Launch:");

case $COMMAND in
  "Browser") librewolf & ;;
  "Media Browser") firefox & ;;
  "Gimp") gimp & ;;
  "Obsidian") obsidian & ;;
  "Finder") foot -e lf & ;;
  "Cava") foot -e cava & ;;
  "Activity Monitor") foot -e btop & ;;
  "GPU Monitor") foot -e nvtop & ;;
  "Godot") godot --rendering-driver opengl3 & ;;
	"Code") GDK_SCALE=2 code --ozone-platform=x11 --disable-gpu-sandbox --ignore-gpu-blacklist --enable-features=CanvasOopRasterization & ;;
  "Music") desktop-menu-music & ;;
  "Video") desktop-menu-video & ;;
  "Pass") desktop-menu-pass & ;;
  "Settings") desktop-menu-settings & ;;
  "System") desktop-menu-system & ;;
esac
