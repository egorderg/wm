#!/bin/bash

COMMAND=$(echo -e "Browser\nMedia Browser\nGimp\nCode\nGodot\nFinder\nCava\nMedia Player\nActivity Monitor\nGPU Monitor\nMusic\nVideo\nPass\nSettings\nSystem" | $DMENU -p "Launch:");

case $COMMAND in
  "Browser") librewolf & ;;
  "Media Browser") firefox & ;;
  "Gimp") gimp & ;;
  "Code") code & ;;
  "Godot") godot3-mono-bin & ;;
  "Finder") foot -e lf & ;;
  "Cava") foot -e cava & ;;
  "Activity Monitor") foot -e btop & ;;
  "GPU Monitor") foot -e nvtop & ;;
  "Settings") desktop-menu-settings & ;;
  "Music") desktop-menu-music & ;;
  "Video") desktop-menu-video & ;;
  "Pass") desktop-menu-pass & ;;
  "System") desktop-menu-system & ;;
esac
